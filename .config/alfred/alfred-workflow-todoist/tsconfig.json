{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "src/js",
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  
  "compileOnSave": false,
  
  "include": [
    "src/ts/**/*"
  ],
  
  "exclude": [
    "node_modules"
  ]
}
